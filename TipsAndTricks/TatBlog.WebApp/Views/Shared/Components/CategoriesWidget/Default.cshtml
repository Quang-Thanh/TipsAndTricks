@model IList<CategoryItem>

<div class="mb-4">
	<h3 class="text-success mb-2">
		Các chủ đề
	</h3>

	<ul class="list-group">
		@foreach (var item in Model)
		{
			<li class="list-group-item">
				<a asp-controller="Blog"
					asp-action="Category"
					asp-route-slug="@item.UrlSlug"
					title=".Name">
					<span > @item.Name</span>
					<span>(@item.PostCount)</span>
				</a>
					
			</li>
		}
	</ul>
</div>