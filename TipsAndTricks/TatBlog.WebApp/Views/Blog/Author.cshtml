@model IPagedList<Post>
@{
	ViewData["PageTitle"] = "Bài viết thuộc tác giả";

	var NameAuthor = (ViewBag.NameAuthor) ?? ("Không tìm thấy tác giả");
}

<div class="p-4">
	@if (!string.IsNullOrWhiteSpace(NameAuthor))
	{
		<h3 class="text-primary mb-3">
			Những bài viết của tác giả '@NameAuthor'
		</h3>
	}
	@foreach (var postItem in Model)
	{
		<partial name="_PostList" model="postItem" />
	}

	<partial name="_Pager" model="@Model" />
</div>