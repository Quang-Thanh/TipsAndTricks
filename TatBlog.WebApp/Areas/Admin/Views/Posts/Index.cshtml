@model TatBlog.WebApp.Areas.Admin.Models.PostFilterModel
@{
    ViewData["PageTitle"] = "Tags";
    var postsList = ViewBag.PostsList as IPagedList<Post>;
}

<h1>Danh sách các bài viết</h1>

<!--Hiển thị Form để tìm bài viết-->
<partial name="_PostFilterPane" model="Model"/>

@if (postsList != null && postsList.Count > 0)
{
    <table class="table table-responsive table-striped">
        <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Tác giả</th>
            <th>Chủ đề</th>
            <th>Xuất bản</th>
            <th>Xóa bài viết</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var post in postsList)
            {
                <tr>
                    <td>
                        <a asp-area="Admin"
                            asp-controller="Posts"
                            asp-action="Edit"
                            asp-route-id="@post.Id"
                            class="text-bold">
                            @post.Title
                        </a>

                        <p class="text-muted">
                            @post.ShortDescription
                        </p>
                    </td>
                    <td>
                        @post.Author.FullName
                    </td>
                    <td>
                        @post.Category.Name
                    </td>
                    <td>
                        <a 
                            asp-area="Admin"
                            asp-controller="Posts"
                            asp-action="SwitchPublished"
                            asp-route-id="@post.Id"
                           class="btn btn-info">
                            @(post.Published ? "Có" : "Không")
                        </a>
                        @*btn xóa*@
                        <td>
                            <a 
                                asp-area="Admin"
                                asp-controller="Posts"
                                asp-action="DeletePost"
                                asp-route-id="@post.Id"
                                class="btn btn-danger">
                                Xóa
                            </a>
                        </td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_Page" model="postsList" />
}
else
{
    <h1 class="text-danger">Không tìm thấy bài viết nào</h1>
}

