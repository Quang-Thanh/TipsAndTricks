@model IPagedList<Post>
@{
	ViewData["PageTitle"] = "Bài viết thuộc từ khóa";

	var NameTag = (ViewBag.NameTag) ?? ("Không tìm thấy từ khóa");
}

<div class="p-4">
	@if (!string.IsNullOrWhiteSpace(NameTag))
	{
		<h3 class="text-primary mb-3">
			Những bài viết thuộc từ khóa '@NameTag'
		</h3>
	}
	@foreach (var postItem in Model)
	{
		<partial name="_PostList" model="postItem" />
	}

	<partial name="_Pager" model="@Model" />
</div>
